{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../AngeliA/AngeliA Framework",
          "files": [
            "AngeliA Framework.csproj"
          ],
          "exclude": [
            "**/ThridParty/**"
          ]
        },
        {
          "src": "../../AngeliA/AngeliA Platformer",
          "files": [
            "AngeliA Platformer.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "**/ThridParty/**",
          "docs/**", 
          "docsCN/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "",
    "template": [
      "default",
      "template"
    ],
    "globalMetadata": {
      "_appName": "AngeliA",
      "_appTitle": "AngeliA",
      "_enableSearch": true,
      "pdf": true,
      "_appFooter": "🐄🐦‍⬛🧦🐈🎃💓🌹☕🏴‍☠️🐤",
      "_disableBreadcrumb": true,
      "_disableAffix": true,
      "_disableContribution": true
    }
  }
}